<div class="card my-4 hide">
  <div class="card-body">
    <%= form_for @reply, url: post_replies_path(@post) do |form| %>
      <div class="form-group">
      	<%= form.hidden_field :comment_id %>
      	<%= form.hidden_field :reply_to  %>
      	<%= form.text_area :boby, placeholder: "Add a comment", class: "form-control" %>
      </div>
      <%= form.submit class: "btn btn-primary" %>
    <% end %>
  </div>
</div>