<div class="row mt-80">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card my-4">            
            <h5 class="card-header">SignUp</h5>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <span>Name</span>
                <div class="form-group">
                  <%= f.text_field :name, class: "form-control" %>
                </div>
                <span>Email</span>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>
                <span>Password</span>
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "password", class: "form-control" %>
                </div>
                <span>Confirm Password</span>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "password_confirmation", class: "form-control" %>
                  </div>
                <%= f.submit "SignUp", class: "btn btn-primary" %>
              <% end %>
            </div>
        </div>
    <%#= render "devise/shared/links" %>
    </div>
    <div class="col-md-3"></div> 
</div>